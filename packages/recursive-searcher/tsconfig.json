{
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.spec.js"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": [ "dom", "dom.iterable", "esnext" ],
    "outDir": "./public/",
    "target": "ESNEXT",
    "module": "ESNext",
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  }
}